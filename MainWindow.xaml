<Window x:Class="DTCWaitingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DTCWaitingList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Nome:" FontWeight="Bold"/>
            <TextBox x:Name="txtNome" Margin="0,5,0,10"/>

            <TextBlock Text="Sobrenome:" FontWeight="Bold"/>
            <TextBox x:Name="txtSobrenome" Margin="0,5,0,10"/>

            <TextBlock Text="Localização:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbLocalizacao" Margin="0,5,0,10">
                <ComboBoxItem Content="Selecione..." IsEnabled="False"/>
                <!-- Adicione aqui os itens da sua lista de localizações -->
            </ComboBox>

            <TextBlock Text="Disponibilidade:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbDisponibilidade" Margin="0,5,0,10">
                <ComboBoxItem Content="Selecione..." IsEnabled="False"/>
                <!-- Adicione aqui os itens da sua lista de disponibilidade -->
            </ComboBox>

            <Button Content="Salvar" Click="Salvar_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
